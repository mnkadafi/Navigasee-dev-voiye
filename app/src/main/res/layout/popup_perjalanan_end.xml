<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--TODO : add  android:importantForAccessibility="no" to view parameter for talkback ignore -->

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/iv_checklist"
        android:layout_width="@dimen/dimen_72dp"
        android:layout_height="@dimen/dimen_72dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="@dimen/dimen_32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:srcCompat="@drawable/ic_check_blue_24dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:text="@string/perjalanan_selesai"
        android:textAlignment="center"
        android:textSize="@dimen/text_18sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/btn_akhiri_sesi"
        android:layout_marginTop="@dimen/dimen_16dp"
        android:textSize="@dimen/text_18sp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56dp"
        android:text="@string/akhiri_sesi"
        android:background="@drawable/ic_bluefill"
        android:gravity="center_horizontal|center_vertical"
        android:textColor="@android:color/white"/>

</LinearLayout>