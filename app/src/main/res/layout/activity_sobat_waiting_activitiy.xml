<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="mViewModel"
            type="ac.id.unikom.codelabs.navigasee.mvvm.sobat_waiting.SobatWaitingViewModel" />

        <variable
            name="mListener"
            type="ac.id.unikom.codelabs.navigasee.mvvm.sobat_waiting.SobatWaitingActionListener" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:context=".mvvm.sobat_waiting.SobatWaitingActivitiy">

        <ImageView
            android:id="@+id/iv_sobat_waiting_icon"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/navigasilogotransparent" />

        <TextView
            android:id="@+id/tv_sobat_waiting_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_sobat_waiting_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:text="@string/wait_label"
            android:textColor="@color/fontBlue"
            android:textSize="@dimen/text_24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_sobat_waiting_message"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_sobat_waiting_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:fontFamily="sans-serif-light"
            android:text="@string/wait_description"
            android:textColor="@color/fontBlue"
            android:textSize="@dimen/text_20sp" />

    </LinearLayout>
</layout>
